PORT=5000
MONGODB_URI=mongodb://localhost:27017/devlovers
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d
NODE_ENV=development

# Localhost Configuration
# Hostname to use instead of 'localhost' (e.g., '127.0.0.1' or custom hostname)
LOCALHOST_HOSTNAME=localhost

# Client URLs for CORS and Socket.IO
# Main client URL (used in development for CORS)
CLIENT_URL=http://localhost:3000
# Alternative client URL (used as fallback)
CLIENT_URL_ALT=http://127.0.0.1:3000

# Server Port Configuration
# Port for the backend server (defaults to 3001 in development)
SERVER_PORT=3001

# MongoDB Configuration (optional - only if not using full MONGODB_URI)
# If you're using MONGODB_URI, you can skip these
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=devlovers

# API URL for test scripts
API_URL=http://localhost:3001

# Production CORS Configuration
# ⚠️ IMPORTANT: For production, you MUST set these values!
# Comma-separated list of allowed origins (e.g., "https://yourdomain.com,https://www.yourdomain.com")
# If left empty in production, ALL origins will be allowed (SECURITY RISK!)
# Example: ALLOWED_ORIGINS=https://devlovers.com,https://www.devlovers.com,https://app.devlovers.com
ALLOWED_ORIGINS=
# Socket.IO CORS origins (defaults to ALLOWED_ORIGINS if not set)
# If left empty, will use ALLOWED_ORIGINS. If both are empty in production, ALL origins allowed (SECURITY RISK!)
# Example: SOCKET_CORS_ORIGINS=https://devlovers.com,https://www.devlovers.com
SOCKET_CORS_ORIGINS=
# Production domain (for logging purposes - optional but recommended)
# Example: DOMAIN=https://devlovers.com
DOMAIN=

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM="DevLovers <no-reply@devlovers.com>"


## Optional: Code runner (Judge0)
# Point to a Judge0 CE instance (e.g., https://judge0-ce.p.rapidapi.com or self-hosted CE)
# Example for self-hosted CE: http://localhost:2358
# Note: Replace 'localhost' with your actual hostname if using LOCALHOST_HOSTNAME
JUDGE0_URL=
# Optional auth token depending on your Judge0 deployment
JUDGE0_KEY=
# Feature toggle for exposing the /api/runner route
FEATURE_CODE_RUNNER=false

## OpenAI API for AI Assistant
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
